<div class="container">
	<h2>口コミ編集</h2>
	<%= form_with model:[@nail_comment,@nail], url:nail_nail_comment_path(@nail_comment), method: :put ,local: :true do |f| %>
		<%= f.label :タイトル %>
		<%= f.text_field :title %>
		<%= f.label :本文 %>
		<%= f.text_field :content %>

		<div id="star-rate-<%= @nail_comment.id %>"></div>
	            <script>
	            $('#star-rate-<%= @nail_comment.id %>').raty({
	              size: 36,
	              starOff:  '<%= asset_path('star-off.png') %>',
	              starOn : '<%= asset_path('star-on.png') %>',
	              starHalf: '<%= asset_path('star-half.png') %>',
	              half: true,
	              readOnly: true,
	              score: <%= @nail_comment.rate %>,
	            });
	            </script>
		<%= f.submit '更新する' %>
	<% end %>
</div>