<div class="container">
<h1>New Comment</h1>

<%= form_with model: @nail_comment, url: nail_nail_comments_path, method: :post, local: true do |form| %>

  <!--nailコードの送信-->
  <%= form.hidden_field :nail_id %>
  <%= form.hidden_field :nail_comment %>
  <div class="form-group row">
        <%= form.label :nail_name, '商品名 ', class:'col-md-3 col-form-label' %>
        <div class="col-md-9">
          <%= form.text_field :nail_name, class: "form-control" %>
        </div>
      </div>

      <!-- タイトル -->
      <div class="form-group row">
        <%= form.label :title, 'タイトル ', class:'col-md-3 col-form-label' %>
        <div class="col-md-9">
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>

      <!-- 評価 -->
      <div class="form-group row" id="star">
        <%= form.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
        <%= form.hidden_field :rate, id: :review_star %>
      </div>

      <!-- 評価javascript -->
      <script>
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'post[rate]',
        half: true,
      });
      </script>

      <!-- 口コミ -->
      <div class="form-group row">
        <%= form.label :content, '口コミ内容 ', class:'col-md-3 col-form-label' %>
        <div class="col-md-9">
          <%= form.text_area :content, class: "form-control", rows: "8",
            placeholder:'口コミ内容がなくても、タイトルと評価のみで投稿できます。
    まずは投稿してみましょう！投稿してから編集もできますよ！' %>
        </div>
      </div>

      <!-- 確認ボタン -->
      <div class="form-group row justify-content-end">
        <div class="col-md-9">
          <%= form.submit '投稿する', class:"btn btn-success" %>
        </div>
      </div>
    <!-- /口コミ入力フォーム -->
  <% end %>

<%= link_to 'Back', nail_nail_comments_path,class:"btn btn-success" %>
</div>