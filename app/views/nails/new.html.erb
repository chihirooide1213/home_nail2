<div class="container">
	<%= form_with model: @nail, url: nails_path, method: :post, local: true do |f| %>
	 <%= f.hidden_field :nail_id %>
	  <table>
		<tr>
			<th><%= f.label :user, '名前' %></th>
			<th><%= f.label :name, '商品名' %></th>
			<th><%= f.label :price, '価格' %></th>
			<th><%= f.label :image,'商品画像' %></th>
			<th><%= f.label :introduction, '商品説明' %></th>
		</tr>

	    <tr>
	    	<td><%= f.text_field :user %></td>
			<td><%= f.text_field :name %></td>
			<td><%= f.text_field :price %></td>
			<td><%= f.attachment_field :image %></td>
			<td><%= f.text_area :introduction %></td>
        </tr>
		<tr>
			<td><%= f.submit '登録' %></td>
		</tr>
	  </table>
	<% end %>

</div>